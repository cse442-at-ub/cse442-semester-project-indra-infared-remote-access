<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        >

        <TextView
            android:id="@+id/remote_fragment_remote_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:gravity="top"
            android:text="@string/living_room_tv"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:background="@android:color/darker_gray"


            android:src="@drawable/ic_settings_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>




    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/bigButtonHolder">

        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.indra.indra.objects.buttons.RemoteImageButton
                app:lircName="KEY_POWER"
                android:src="@drawable/ic_power_black"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_column="2"
                android:backgroundTint="@android:color/holo_red_light"
                android:id="@+id/bPower"

                />

        </TableRow>
        
        
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_1"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b1"
                />
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_2"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b2"/>
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_3"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b3"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_4"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b4"/>
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_5"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b5"/>
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_6"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b6"/>

        </TableRow>
        
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_7"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b7"/>
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_8"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b8"/>
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_9"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/b9"/>

        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            
            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_0"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_column="1"
                android:id="@+id/b0"/>
            

        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_VOLUMEUP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_vol_chan_up"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="VOL"
                android:id="@+id/bVolUp"/>

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_MENU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="MUTE"
                android:id="@+id/bMute"/>

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_CHANNELUP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_vol_chan_up"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="CH"
                android:id="@+id/bChUp"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_VOLUMEDOWN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_vol_chan_down"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="VOL"
                android:id="@+id/bVolDown"/>

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_MENU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:id="@+id/bMenu"/>

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_CHANNELDOWN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_vol_chan_down"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="CH"
                android:id="@+id/bChDown"/>

        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
                <com.indra.indra.objects.buttons.RemoteImageButton
                    app:lircName="KEY_UP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_up_black"
                    android:layout_column="1"
                    android:id="@+id/bArrowUp"/>
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.indra.indra.objects.buttons.RemoteImageButton
                app:lircName="KEY_LEFT"
                android:src="@drawable/ic_arrow_left_black"
                android:layout_height="match_parent"
                android:id="@+id/bArrowLeft"/>

            <com.indra.indra.objects.buttons.RemoteButton
                app:lircName="KEY_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_enter_black"
                android:text="ENTER"
                android:layout_column="1"
                android:id="@+id/bEnter"/>

            <com.indra.indra.objects.buttons.RemoteImageButton
                app:lircName="KEY_RIGHT"
                android:src="@drawable/ic_arrow_right_black"
                android:layout_height="match_parent"
                android:id="@+id/bArrowRight"/>
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <com.indra.indra.objects.buttons.RemoteImageButton
                app:lircName="KEY_DOWN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down_black"
                android:layout_column="1"
                android:id="@+id/bArrowDown"/>
        </TableRow>

    </TableLayout>

</LinearLayout>